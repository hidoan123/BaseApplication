    <style name="NativeFullWidthCTA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="26">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="26">14dp</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:backgroundTint">@color/primaryRed50</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/dark2</item>
    </style>
    <style name="NativeMetaCTA">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">12dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:backgroundTint">@color/primaryRed50</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

